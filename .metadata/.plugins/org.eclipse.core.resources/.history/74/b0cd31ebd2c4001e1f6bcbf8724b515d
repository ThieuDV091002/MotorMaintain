	<script type="text/javascript">
	  $(document).ready(function(){
		  $("#buttonCancel").on("click", function(){
			  window.location = "[[@{/service}]]"
		  })
		  
		  $("#fileImage").change(function(){
			  fileSize = this.files[0].size
			  if(fileSize > 1048576){
				  this.setCustomVlidity("Bạn cần chọn một bức ảnh có kích thước nhỏ hơn 1MB!")
				  this.reportValidity()
			  }
			  else{
				  this.setCustomValidity("")
				  showImageThumbnail(this)
			  }
		  })
	  })
	  
	  function showImageThumbnail(fileInput){
		  var file = fileInput.files[0]
		  var reader = new FileReader()
		  reader.onload = function(e){
			  $("#thumbnail").attr("src", e.target.result)
		  }
		  reader.readAsDataURL(file)
	  }
	  
	  $(document).ready(function() {
	        $("#logoutLink").on("click", function(e) {
	            e.preventDefault();
	            $("form[name='LogoutForm']").submit();
	        });
	    });
	    
	    function checkTendichvuUnique(form){
		  url = "[[@{/service-check_tendichvu}]]"
		  serviceTendichvu = $("#tendichvu").val()
		  csrfValue = $("input[name='_csrf']").val()
		  params = {tensach: serviceTendichvu, _csrf: csrfValue}
		  $.post(url, params, function(response){
			  if(response == "OK"){
				  form.submit()
			  }
			  else if(response == "Duplicated"){
				  alert("Có một cuốn dịch vụ khác cùng tên này: " + serviceTendichvu)
			  }  
		  })
		  return false
	  }
  </script>
